<div class="paper_holder" style="cursor: pointer;">
    <div class="metadata" style="height:{{{ metadata_height }}}px; width:{{{ metadata_width }}}px;">
        <p id="title" class="highlightable">{{{ d.title }}}<br /></p>
        <p id="details" class="highlightable">{{{ d.authors_string }}}</p>
        <p id="in">in <span class="pubyear highlightable">{{{ d.published_in }}} ({{{ d.year }}})</span></p>
    </div>
    <div class="readers">
        <p id="readers">{{{ d.readers }}}<span class="readers_entity"> {{{ base_unit }}}</span></p>
    </div>
</div>